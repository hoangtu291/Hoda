<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">

    <excludes>
        <pattern>/api*</pattern>
    </excludes>
    
    <decorator name="web" page="web.jsp">
        <pattern>/*</pattern>
    </decorator>
    <decorator name="admin" page="admin.jsp">
        <pattern>/admin*</pattern>
    </decorator>
    <decorator name="login" page="">
        <pattern>/register</pattern>
    </decorator>
    
    <decorator name="updateInfo" page="">
        <pattern>/update/info</pattern>
    </decorator>
    
    <decorator name="followList" page="">
        <pattern>/personal/follow</pattern>
    </decorator>
</decorators>